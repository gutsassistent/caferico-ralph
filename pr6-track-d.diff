+      audienceId,
+      email: email.toLowerCase().trim(),
+      unsubscribed: false,
+    });
+
+    return NextResponse.json({ ok: true });
+  } catch {
+    return NextResponse.json(
+      { error: 'subscribe_failed' },
+      { status: 500 }
+    );
+  }
+}
